# SafeWork App Container - Optimized v1.3.1
FROM python:3.11-slim

# ë¹Œë“œ ì¸ì
ARG BUILD_DATE
ARG VCS_REF
ARG VERSION=v1.3.1

# ë©”íƒ€ë°ì´í„° ë¼ë²¨
LABEL maintainer="SafeWork Team" \
      org.label-schema.build-date=$BUILD_DATE \
      org.label-schema.vcs-ref=$VCS_REF \
      org.label-schema.version=$VERSION \
      org.label-schema.name="safework-app" \
      org.label-schema.description="SafeWork Flask Application with MySQL migrations and document management" \
      com.centurylinklabs.watchtower.enable="true"

# í™˜ê²½ ë³€ìˆ˜ ì„¤ì • (ìš´ì˜ì— í•„ìš”í•œ ëª¨ë“  ì„¤ì •)
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    FLASK_APP=app.py \
    FLASK_CONFIG=production \
    SECRET_KEY=safework-production-secret-key-2024 \
    MYSQL_HOST=safework-mysql \
    MYSQL_PORT=3306 \
    MYSQL_USER=safework \
    MYSQL_PASSWORD=safework2024 \
    MYSQL_DATABASE=safework_db \
    REDIS_HOST=safework-redis \
    REDIS_PORT=6379 \
    REDIS_PASSWORD= \
    REDIS_DB=0 \
    ADMIN_USERNAME=admin \
    ADMIN_PASSWORD=safework2024 \
    UPLOAD_FOLDER=/app/uploads \
    APP_PORT=4545 \
    TZ=Asia/Seoul

# ì‘ì—… ë””ë ‰í† ë¦¬ ì„¤ì •
WORKDIR /app

# ì‹œìŠ¤í…œ íŒ¨í‚¤ì§€ ì„¤ì¹˜ (ìµœì í™”ëœ ë‹¨ì¼ ë ˆì´ì–´)
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        gcc \
        default-libmysqlclient-dev \
        pkg-config \
        tzdata \
    && cp /usr/share/zoneinfo/Asia/Seoul /etc/localtime \
    && echo "Asia/Seoul" > /etc/timezone \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* \
    && rm -rf /tmp/* \
    && rm -rf /var/tmp/*

# Python íŒ¨í‚¤ì§€ ì„¤ì¹˜ (ìºì‹œ ìµœì í™”)
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip setuptools wheel \
    && pip install --no-cache-dir -r requirements.txt \
    && pip cache purge

# ì• í”Œë¦¬ì¼€ì´ì…˜ ì½”ë“œ ë³µì‚¬ (ìµœì í™”ëœ ë ˆì´ì–´ë§)
COPY . /app/

# ë””ë ‰í† ë¦¬ ìƒì„± ë° ê¶Œí•œ ì„¤ì •
RUN mkdir -p /app/uploads /app/forms /app/logs \
    && chmod -R 755 /app \
    && chmod +x /app/migrate.py

# ë¹„ë£¨íŠ¸ ì‚¬ìš©ì ìƒì„± ë° ì „í™˜ (ë³´ì•ˆ)
RUN groupadd -r safework && \
    useradd -r -g safework -d /app -s /sbin/nologin -c "SafeWork User" safework \
    && chown -R safework:safework /app

USER safework

# í¬íŠ¸ ë…¸ì¶œ
EXPOSE 4545

# í—¬ìŠ¤ì²´í¬ (ê°œì„ ëœ ë²„ì „)
HEALTHCHECK --interval=30s --timeout=5s --start-period=10s --retries=3 \
    CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:4545/health')" || exit 1

# ì‹œì‘ ìŠ¤í¬ë¦½íŠ¸ ìƒì„± (ìµœì í™”ëœ ë²„ì „)
USER root
RUN cat > /app/start.sh <<'EOF' && \
echo '#!/bin/bash' && \
echo 'set -e' && \
echo '' && \
echo 'echo "ğŸ—‚ï¸ SafeWork v1.3.1 - Starting database migrations..."' && \
echo 'python migrate.py migrate || {' && \
echo '    echo "âš ï¸ Migration warning (may be first run or already migrated)"' && \
echo '    echo "ğŸ“Š Checking database connection..."' && \
echo '    python -c "from models import db; db.engine.execute(\"SELECT 1\")" || exit 1' && \
echo '}' && \
echo '' && \
echo 'echo "ğŸš€ Starting SafeWork application on port $APP_PORT..."' && \
echo 'exec gunicorn --bind 0.0.0.0:$APP_PORT --workers 2 --worker-class sync --timeout 120 --keep-alive 2 --max-requests 1000 --max-requests-jitter 50 --log-level info app:app'
EOF
RUN chmod +x /app/start.sh && \
    chown safework:safework /app/start.sh

USER safework

# ë§ˆì´ê·¸ë ˆì´ì…˜ì„ í¬í•¨í•œ ì• í”Œë¦¬ì¼€ì´ì…˜ ì‹¤í–‰
CMD ["/app/start.sh"]