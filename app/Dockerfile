# SafeWork App Container
FROM python:3.11-slim

# ë²„ì „ ì •ë³´ë¥¼ ë¹Œë“œ ì‹œì ì— ì „ë‹¬
ARG APP_VERSION=latest

# í™˜ê²½ ë³€ìˆ˜ ì„¤ì • (ìš´ì˜ì— í•„ìš”í•œ ëª¨ë“  ì„¤ì •)
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    FLASK_APP=app.py \
    FLASK_CONFIG=production \
    SECRET_KEY=safework-production-secret-key-2024 \
    APP_VERSION=${APP_VERSION} \
    MYSQL_HOST=safework-mysql \
    MYSQL_PORT=3306 \
    MYSQL_USER=safework \
    MYSQL_PASSWORD=safework2024 \
    MYSQL_DATABASE=safework_db \
    REDIS_HOST=safework-redis \
    REDIS_PORT=6379 \
    REDIS_PASSWORD= \
    REDIS_DB=0 \
    ADMIN_USERNAME=admin \
    ADMIN_PASSWORD=safework2024 \
    UPLOAD_FOLDER=/app/uploads \
    APP_PORT=4545

# Watchtower ë¼ë²¨ (ìë™ ì—…ë°ì´íŠ¸ í™œì„±í™”)
LABEL com.centurylinklabs.watchtower.enable="true"

# ì‘ì—… ë””ë ‰í† ë¦¬ ì„¤ì •
WORKDIR /app

# ì‹œìŠ¤í…œ íŒ¨í‚¤ì§€ ì„¤ì¹˜
RUN apt-get update && apt-get install -y \
    gcc \
    default-libmysqlclient-dev \
    pkg-config \
    && rm -rf /var/lib/apt/lists/*

# Python íŒ¨í‚¤ì§€ ì„¤ì¹˜
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# ì• í”Œë¦¬ì¼€ì´ì…˜ ì½”ë“œ ë³µì‚¬
COPY . /app/

# ì—…ë¡œë“œ ë””ë ‰í† ë¦¬ ìƒì„±
RUN mkdir -p /app/uploads /app/forms

# í¼ íŒŒì¼ì€ ë¹Œë“œ ì‹œì ì— ë³µì‚¬ë¨

# í¬íŠ¸ ë…¸ì¶œ
EXPOSE 4545

# ê¶Œí•œ ì„¤ì • (ë§ˆì´ê·¸ë ˆì´ì…˜ ìŠ¤í¬ë¦½íŠ¸ ì‹¤í–‰ ê°€ëŠ¥í•˜ë„ë¡)
RUN chmod +x /app/migrate.py

# í—¬ìŠ¤ì²´í¬
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:4545/health')" || exit 1

# ì‹œì‘ ìŠ¤í¬ë¦½íŠ¸ ìƒì„± (ë§ˆì´ê·¸ë ˆì´ì…˜ í›„ ì•± ì‹¤í–‰)
RUN echo '#!/bin/bash\n\
echo "ğŸ—‚ï¸ Running database migrations..."\n\
python migrate.py migrate || echo "âš ï¸ Migration warning (may be first run)"\n\
echo "ğŸš€ Starting SafeWork application..."\n\
exec gunicorn --bind 0.0.0.0:4545 --workers 1 --timeout 120 app:app' > /app/start.sh \
    && chmod +x /app/start.sh

# ë§ˆì´ê·¸ë ˆì´ì…˜ì„ í¬í•¨í•œ ì• í”Œë¦¬ì¼€ì´ì…˜ ì‹¤í–‰
CMD ["/app/start.sh"]