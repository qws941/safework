{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "types": ["@cloudflare/workers-types"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    // Gradual TypeScript strict mode adoption (Phase 1: noImplicitAny)
    "strict": false,
    "noImplicitAny": true,  // ✅ ENABLED - Phase 1 of strict mode adoption
    "strictNullChecks": false,  // TODO: Enable in Phase 2 (Week 2)
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,  // ✅ ENABLED - Best practice
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
