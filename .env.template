# SafeWork 환경 변수 템플릿
# Environment Variables Template for SafeWork
# 이 파일을 복사하여 .env.local 또는 .env.production으로 사용하세요

# =============================================================================
# 환경 설정 (Environment Configuration)
# =============================================================================
ENVIRONMENT=development
DEPLOYMENT_MODE=development
TZ=Asia/Seoul

# 애플리케이션 설정 (Application Settings)
FLASK_CONFIG=development
SECRET_KEY=your-secret-key-here
DEBUG=true
TESTING=false

# =============================================================================
# 데이터베이스 설정 (Database Configuration)
# =============================================================================
DB_HOST=safework-postgres
DB_PORT=5432
DB_NAME=safework_db
DB_USER=safework
DB_PASSWORD=your-database-password-here

# 데이터베이스 풀 설정 (Database Pool Settings)
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true
DB_ECHO=false

# =============================================================================
# Redis 설정 (Redis Configuration)
# =============================================================================
REDIS_HOST=safework-redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAXMEMORY=256mb
REDIS_MAXMEMORY_POLICY=allkeys-lru

# =============================================================================
# 관리자 설정 (Admin Configuration)
# =============================================================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-admin-password-here

# =============================================================================
# URL 설정 (URL Configuration)
# =============================================================================
BASE_URL=http://localhost:4545
API_BASE_URL=http://localhost:4545/api
LOCAL_URL=http://localhost:4545

# =============================================================================
# 파일 업로드 설정 (File Upload Configuration)
# =============================================================================
UPLOAD_FOLDER=/app/uploads
MAX_CONTENT_LENGTH=52428800

# =============================================================================
# 보안 설정 (Security Configuration)
# =============================================================================
WTF_CSRF_ENABLED=false
WTF_CSRF_CHECK_DEFAULT=false
SSL_REQUIRED=false
SECURE_COOKIES=false

# =============================================================================
# 성능 설정 (Performance Configuration)
# =============================================================================
WORKER_CONNECTIONS=100
WORKER_PROCESSES=1
GUNICORN_WORKERS=2
GUNICORN_TIMEOUT=60

# =============================================================================
# 로깅 설정 (Logging Configuration)
# =============================================================================
LOG_LEVEL=DEBUG
LOG_FORMAT=text
LOGS_DIR=logs
LOGS_RETENTION_DAYS=30
SENTRY_ENABLED=false

# =============================================================================
# Slack 알림 설정 (Slack Notification Configuration)
# =============================================================================
SLACK_WEBHOOK_URL=
SLACK_BOT_TOKEN=
SLACK_OAUTH_TOKEN=
SLACK_CHANNEL=#safework-alerts

# =============================================================================
# 모니터링 설정 (Monitoring Configuration)
# =============================================================================
HEALTH_CHECK_INTERVAL=60
MAX_RETRIES=3
TIMEOUT=30

# =============================================================================
# 백업 설정 (Backup Configuration)
# =============================================================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=
BACKUP_RETENTION_DAYS=7

# =============================================================================
# Portainer API 설정 (Portainer API Configuration)
# =============================================================================
PORTAINER_URL=https://portainer.jclee.me
PORTAINER_TOKEN=your-portainer-token-here
ENDPOINT_PRODUCTION=3
ENDPOINT_DEV=2

# =============================================================================
# Registry 설정 (Registry Configuration)
# =============================================================================
REGISTRY_URL=registry.jclee.me
REGISTRY_HOST=registry.jclee.me
REGISTRY_USER=admin
REGISTRY_PASSWORD=your-registry-password-here

# =============================================================================
# Docker 설정 (Docker Configuration)
# =============================================================================
DOCKER_RESTART_POLICY=unless-stopped
DOCKER_MEMORY_LIMIT=512m
DOCKER_CPU_LIMIT=0.5

# =============================================================================
# 네트워크 설정 (Network Configuration)
# =============================================================================
NETWORK_NAME=safework_network

# =============================================================================
# 컨테이너 설정 (Container Configuration)
# =============================================================================
APP_CONTAINER=safework-app
POSTGRES_CONTAINER=safework-postgres
REDIS_CONTAINER=safework-redis

# 컨테이너 포트 설정 (Container Port Configuration)
APP_PORT=4545
POSTGRES_PORT=5432
REDIS_PORT=6379