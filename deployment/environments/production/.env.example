# SafeWork Production Environment Configuration Template
# 프로덕션 환경 설정 템플릿
# Copy to .env and fill in actual values

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=false
SECRET_KEY=CHANGE_THIS_TO_SECURE_RANDOM_KEY

# Database Configuration (PostgreSQL)
DB_HOST=safework-postgres
DB_PORT=5432
DB_NAME=safework_db
DB_USER=safework
DB_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# Redis Configuration
REDIS_HOST=safework-redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
REDIS_DB=0

# Admin Credentials (Change in Production!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# CSRF Protection (Enable in production if needed)
WTF_CSRF_ENABLED=false
WTF_CSRF_CHECK_DEFAULT=false

# File Upload Settings
UPLOAD_FOLDER=/app/uploads
MAX_CONTENT_LENGTH=52428800

# Timezone
TZ=Asia/Seoul

# URLs
DEV_URL=https://safework-dev.jclee.me
PRD_URL=https://safework.jclee.me
LOCAL_URL=http://localhost:4545

# Production Features
FLASK_CONFIG=production

# Registry Configuration
REGISTRY_HOST=registry.jclee.me
REGISTRY_USER=admin
REGISTRY_PASSWORD=CHANGE_THIS_TO_REGISTRY_PASSWORD

# Portainer Configuration
PORTAINER_URL=https://portainer.jclee.me
PORTAINER_API_KEY=CHANGE_THIS_TO_PORTAINER_API_KEY

# Watchtower Configuration
WATCHTOWER_URL=https://watchtower.jclee.me
WATCHTOWER_HTTP_API_TOKEN=CHANGE_THIS_TO_WATCHTOWER_TOKEN