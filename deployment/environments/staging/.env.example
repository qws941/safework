# SafeWork Staging Environment Configuration Template
# 스테이징 환경 설정 템플릿

# Flask Configuration
FLASK_ENV=staging
FLASK_DEBUG=false
SECRET_KEY=staging-secure-key-different-from-production

# Database Configuration (PostgreSQL)
DB_HOST=safework-staging-postgres
DB_PORT=5432
DB_NAME=safework_staging_db
DB_USER=safework_staging
DB_PASSWORD=staging_secure_password

# Redis Configuration
REDIS_HOST=safework-staging-redis
REDIS_PORT=6379
REDIS_PASSWORD=staging_redis_password
REDIS_DB=0

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=staging_admin_password

# CSRF Protection
WTF_CSRF_ENABLED=false
WTF_CSRF_CHECK_DEFAULT=false

# File Upload Settings
UPLOAD_FOLDER=/app/uploads
MAX_CONTENT_LENGTH=52428800

# Timezone
TZ=Asia/Seoul

# URLs
DEV_URL=https://safework-dev.jclee.me
PRD_URL=https://safework.jclee.me
LOCAL_URL=http://localhost:4545

# Staging Features
FLASK_CONFIG=staging