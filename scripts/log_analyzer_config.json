{
  "portainer_url": "https://portainer.jclee.me",
  "endpoint_id": "3",
  "safework_containers": [
    "safework-app",
    "safework-postgres",
    "safework-redis"
  ],
  "monitoring_interval": 300,
  "auto_recovery_enabled": true,
  "alert_thresholds": {
    "error_rate_per_hour": 15,
    "response_time_seconds": 5.0,
    "memory_usage_percent": 85,
    "cpu_usage_percent": 80,
    "disk_usage_percent": 90
  },
  "recovery_settings": {
    "max_restarts_per_hour": 3,
    "restart_cooldown_minutes": 5,
    "health_check_timeout": 30
  },
  "notification": {
    "slack": {
      "enabled": true,
      "webhook_url": "${SLACK_WEBHOOK_URL}",
      "channels": ["#safework-alerts", "#operations"]
    },
    "email": {
      "enabled": false,
      "smtp_server": "smtp.gmail.com",
      "smtp_port": 587,
      "username": "${EMAIL_USERNAME}",
      "password": "${EMAIL_PASSWORD}",
      "recipients": [
        "admin@safework.com",
        "ops@safework.com"
      ]
    },
    "github_issues": {
      "enabled": true,
      "repo": "qws941/safework2",
      "labels": ["bug", "operations", "auto-generated"],
      "critical_threshold": 5
    }
  },
  "analysis_patterns": {
    "database_issues": [
      "OperationalError",
      "Database connection failed",
      "psycopg2.Error",
      "Connection to database lost",
      "Lock wait timeout",
      "Deadlock found"
    ],
    "performance_issues": [
      "Slow query",
      "High CPU usage",
      "Memory usage.*9[0-9]%",
      "Response time.*[5-9][0-9]{3}ms",
      "Queue length.*[1-9][0-9]{2,}"
    ],
    "security_concerns": [
      "Authentication failed",
      "Invalid login attempt",
      "Permission denied",
      "Unauthorized access",
      "SQL injection",
      "XSS attempt"
    ],
    "application_errors": [
      "500 Internal Server Error",
      "404 Not Found",
      "502 Bad Gateway",
      "503 Service Unavailable",
      "Exception in.*survey",
      "Flask application error"
    ]
  },
  "trend_analysis": {
    "enabled": true,
    "window_hours": 24,
    "alert_on_trends": true,
    "error_rate_increase_threshold": 50,
    "response_time_increase_threshold": 100
  },
  "reporting": {
    "daily_summary": {
      "enabled": true,
      "time": "09:00",
      "timezone": "Asia/Seoul"
    },
    "weekly_report": {
      "enabled": true,
      "day": "monday",
      "time": "10:00"
    },
    "export_format": "json",
    "retention_days": 30
  }
}